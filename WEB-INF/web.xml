  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

	<!--  General Web Application Description -->
	<display-name>Students as JSP</display-name>

	<description>
		Students example, using JSP
 	</description>

	<servlet>
		<servlet-name>student</servlet-name>
		<jsp-file>/students.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>student</servlet-name>
		<url-pattern>/student</url-pattern>
	</servlet-mapping>

</web-app>
